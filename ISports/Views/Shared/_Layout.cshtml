<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Bootstrap.css")" rel="stylesheet" type="text/css" />

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color:#fff;">
        <a class="navbar-brand" href="~/Event/FeedEvents">I-SPORTS</a>
        <div class="navbar-right">
            <a href="~/Account/Login" style="margin-top:7px; margin-right: 7px" class="btn btn-primary">
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
            </a>
        </div>
    </div>
    <br />
    <br />
    <div class="container">
        <div class="row profile">
            <div class="col-md-3">
                <div class="profile-sidebar">
                    <!-- SIDEBAR USERPIC -->
                    <div class="profile-userpic">
                        <img src="~/Pictures/user_profile.jpg" class="img-responsive" alt="">
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            Vernes Augusto
                        </div>
                        <div class="profile-usertitle-job">
                            <a href="~/Account/Edit" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp Profile</a>
                        </div>
                    </div>
                    <!-- END SIDEBAR USER TITLE -->
                    <!-- SIDEBAR BUTTONS -->
                    <div class="profile-userbuttons">
                        
                    </div>
                    <!-- END SIDEBAR BUTTONS -->
                    <!-- SIDEBAR MENU -->
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <li>
                                <a href="~/Event/FeedEvents">
                                    <i class="glyphicon glyphicon-home"></i>
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="~/Event/UserEvents">
                                    <i class="glyphicon glyphicon-th-list"></i>
                                    My Events
                                </a>
                            </li>
                            <li>
                                <a href="~/Event/Search">
                                    <i class="glyphicon glyphicon-search"></i>
                                    Search Events
                                </a>
                            </li>
                            <li>
                                <a href="~/Event/Create">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    New Event
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- END MENU -->
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
