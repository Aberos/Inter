
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Bootstrap.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="col-md-9">
        <div class="profile-content">
            <div class="container">
                <div class="page-header">
                    <h2> Search Events </h2>
                </div>
                <!-- Search Container -->
                <div class="container">
                    <div class="row">

                        <div class="container">

                            <div class="row">
                                <button style="float:right" type="button" class="btn btn-primary"><i class="fa fa-fw fa-search" aria-hidden="true"></i></button>
                                <div class="col-md-0 col-sm-0 col-xs-0"></div>
                                <div class="col-md-3 col-sm-3 col-xs-3 sec">
                                    <select class="form-control">
                                        <option>Sport</option>
                                        <option>Football</option>
                                        <option>Voleyball</option>
                                        <option>Baseball</option>
                                        <option>Basketball</option>
                                    </select>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3 sec">
                                    <select class="form-control">
                                        <option>Town</option>
                                        <option>São José do Rio Preto</option>
                                        <option>Catanduva</option>
                                        <option>Cedral</option>
                                        <option>Onda Verde</option>
                                    </select>
                                </div>
                                <div class="col-md-0 col-sm-0 col-xs-0">
                                    <input type="search" class="form-control" placeholder="Name Event">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <!-- Begin of rows -->
                <div class="row carousel-row">
                    <div class="col-xs-13 col-xs-offset-2 slide-row">
                        <div id="carousel-1" class="carousel slide slide-carousel" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src="~/Pictures/Search.jpg" alt="Image">
                                </div>
                            </div>
                        </div>
                        <div class="slide-content">
                            <h4>Racha de Quinta</h4>
                            <p>
                                Lorem ipsum dolor sit amet, consetetur sadipscing elitr,
                                sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat
                            </p>
                        </div>
                        <div class="slide-footer">
                            <span class="pull-right buttons">
                                <a href="~/Event/Home" class="btn btn-sm btn-primary"><i class="fa fa-fw fa-binoculars" aria-hidden="true"></i>&nbsp Access</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
