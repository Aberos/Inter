
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Bootstrap.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="col-md-9">
        <div class="profile-content">
            <div class="container">
                <div class="page-header">
                    <h2> Search Result </h2>
                    <div class="subscribe">
                        <button style="float:right" type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Search", "Event")';return false;"><i class="fa fa-fw fa-search" aria-hidden="true"></i> New Search</button>
                    </div>
                </div>
                <!-- Begin of rows -->
                @if (ViewBag.ListEventos != null)
                {
                    foreach (var e in ViewBag.ListEventos)
                    {
                        <div class="row carousel-row">
                            <div class="col-xs-13 col-xs-offset-2 slide-row">
                                <div id="carousel-1" class="carousel slide slide-carousel" data-ride="carousel">
                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner">
                                        <div class="item active">
                                            <img src="@e.Imagem" alt="Image">
                                        </div>
                                    </div>
                                </div>
                                <div class="slide-content">
                                    <h4>@e.Nome</h4>
                                    <p>
                                        @e.Descricao
                                    </p>
                                </div>
                                <div class="slide-footer">
                                    <span class="pull-right buttons">
                                        <a href="~/Event/Home/?EventoID=@e.Id_Evento" class="btn btn-sm btn-primary"><i class="fa fa-fw fa-binoculars" aria-hidden="true"></i>&nbsp Access</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</body>
</html>
