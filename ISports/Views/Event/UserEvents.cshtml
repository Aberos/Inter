
@{
    ViewBag.Title = "My Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Bootstrap.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="col-md-9">
        <div class="profile-content">
            <div class="container">
                @if (TempData["erroCriar"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["erroCriar"]
                    </div>
                }

                @if (TempData["sucessoCriar"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["sucessoCriar"]
                    </div>
                }

                <div class="page-header">
                    <h2> My Events </h2>
                </div>
                @if (Enumerable.Count(ViewBag.UserEvents) > 0)
                {
                    foreach (var p in ViewBag.UserEvents)
                    {
                    <!-- Begin of rows -->
                            <div class="row carousel-row">
                                <div class="col-xs-13 col-xs-offset-2 slide-row">
                                    <div id="carousel-1" class="carousel slide slide-carousel" data-ride="carousel">
                                        <!-- Wrapper for slides -->
                                        <div class="carousel-inner">
                                            <div class="item active">
                                                <img src="@p.Imagem" alt="Image" class="img-thumbnail" style="height: 150px;!important">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="slide-content">
                                        <h4>@p.Nome</h4>
                                        <p>
                                            @p.Descricao
                                        </p>
                                    </div>
                                    <div class="slide-footer">
                                        <span class="pull-right buttons">
                                            <a href="~/Event/Manager/?EventoID=@p.Id_Evento" class="btn btn-sm btn-danger"><i class="fa fa-fw fa-cogs" aria-hidden="true"></i>&nbsp Manage</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                    }
                }
                else
                {
                    <h1 class="text-info text-center">NO EVENTS</h1>
                }



            </div>
        </div>
    </div>
</body>
</html>

