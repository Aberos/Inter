
@{
    ViewBag.Title = "My Events";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Bootstrap.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="col-md-9">
        <div class="profile-content">
            <div class="container">
                <div class="page-header">
                    <h2> My Events </h2>
                </div>

                @foreach (var p in ViewBag.UserEvents)
                {
                <!-- Begin of rows -->
                <div class="row carousel-row">
                    <div class="col-xs-13 col-xs-offset-2 slide-row">
                        <div id="carousel-1" class="carousel slide slide-carousel" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                <div class="item active">
                                    @if (@p.Imagem != null)
                                    {
                                        <img src="@p.Imagem" alt="Image">
                                    }
                                    else
                                    {
                                        <img src="~/Pictures/futebol.jpg" alt="Image">
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="slide-content">
                            <h4>@p.Nome</h4>
                            <p>
                                @p.Descricao
                            </p>
                        </div>
                        <div class="slide-footer">
                            <span class="pull-right buttons">
                                <a href="~/Event/Manager/?EventoID=@p.Id_Evento" class="btn btn-sm btn-danger"><i class="fa fa-fw fa-cogs" aria-hidden="true"></i>&nbsp Manager</a>
                            </span>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</body>
</html>

