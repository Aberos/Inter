@using ISports.Models

@model Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SING UP</title>
    <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Bootstrap.css")" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.mask.js"></script>
    <script>
                       $(window).load(function () {
                            $('#cell').mask('00 000000000');
                        });
    </script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" style="background-color:#fff;">
        <a class="navbar-brand" href="~/Account/Login"><img src="~/Pictures/isports.png" height="20px" /></a>
    </div>
    <br />
    <br />
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h5 class="text-center">
                            SIGN UP
                        </h5>
                        <form class="form form-signup" role="form" action="/Account/Create" method="post">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Nome, new { @class = "form-control" })
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                    @*<input type="text" class="form-control" name="Nome" placeholder="First Name" />*@                                   
                                    @Html.TextBoxFor(m => m.Nome, new { @class="form-control", @placeholder = "First Name", @required = "required" })
                                </div>
                                    @Html.ValidationMessageFor(m => m.Nome)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Sobrenome, new { @class = "form-control" })
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                @*<input type="text" class="form-control" name="Sobrenome" placeholder="Second Name" />*@
                                @Html.TextBoxFor(m => m.Sobrenome, new { @class = "form-control", @placeholder = "Last Name", @required = "required" })
                            </div>
                                @Html.ValidationMessageFor(m => m.Sobrenome)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DataNasc, new { @class = "form-control" })
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            @*<input type="date" class="form-control" name="DataNasc" placeholder="Age" />*@
                            @Html.TextBoxFor(m => m.DataNasc, "{0:MM/dd/yyyy}", new { @class = "form-control date", @type = "date", @placeholder = "Date of Birth" , @required = "required" })
                        </div>
                            @Html.ValidationMessageFor(m => m.DataNasc)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "form-control" })
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-envelope"></span>
                            </span>
                            @*<input type="text" class="form-control" name="Email" placeholder="Email Address" />*@
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @placeholder = "E-mail", @required = "required" })
                        </div>
                            @Html.ValidationMessageFor(m => m.Email)
                    </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Cel, new { @class = "form-control" })
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-envelope"></span>
                                    </span>
                                    @*<input type="text" class="form-control" name="Cel" placeholder="Cel" />*@
                                    @Html.TextBoxFor(m => m.Cel, new { @class = "form-control", @placeholder = "Cell phone", id="cell", @required = "required"})
                                </div>
                                @Html.ValidationMessageFor(m => m.Cel)
                            </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Senha, new { @class = "form-control" })
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @*<input type="password" class="form-control" name="Senha" placeholder="Password" />*@
                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @placeholder = "Password", @required = "required" , @pattern =".{6,}", id ="password" })
                            </div>
                            @Html.ValidationMessageFor(m => m.Senha)
                    </div>
                    <div class="form-group">
                        <label for="ConfSenha" class="form-control">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            <input type="password" class="form-control" name="ConfSenha" placeholder="Confirm Password" pattern =".{6,}" id="confirm_password"/>
                        </div>
                    </div>

                   
                </div>

                    <button type="submit" class="btn btn-sm btn-primary btn-block" role="button">
                        SUBMIT
                    </button> 
                    </form>

                    <script>
                        var password = document.getElementById("password")
                        , confirm_password = document.getElementById("confirm_password");

                        function validatePassword() {
                            if (password.value != confirm_password.value) {
                                confirm_password.setCustomValidity("Passwords Don't Match");
                            } else {
                                confirm_password.setCustomValidity('');
                            }
                        }

                        password.onchange = validatePassword;
                        confirm_password.onkeyup = validatePassword;
                    </script>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>
